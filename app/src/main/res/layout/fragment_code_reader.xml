<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/readerView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/infoSection"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_weight="1">

        <com.journeyapps.barcodescanner.BarcodeView
            android:id="@+id/barcode_scanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/camera_square"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.55"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.65" />


        <TextView
            android:id="@+id/validate_with"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:text="@string/validate_with"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/country_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:background="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/validate_with"
            app:layout_constraintStart_toEndOf="@id/validate_with"
            app:layout_constraintTop_toTopOf="@id/validate_with" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infoSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/readerView"
        android:background="#5ED5D5D5"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/lowBar"
            app:layout_constraintTop_toTopOf="@id/infoSection">

            <include layout="@layout/verificated_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lowBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/low_bar"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/low_bar"
                app:layout_constraintBottom_toBottomOf="@+id/lowBar" />

            <ImageView
                android:id="@+id/cameraButton"
                android:layout_width="wrap_content"
                android:layout_height="104dp"
                android:foregroundGravity="center_horizontal"
                android:src="@drawable/ic_camera_on"
                app:layout_constraintEnd_toEndOf="@id/lowBar"
                app:layout_constraintStart_toStartOf="@id/lowBar"
                app:layout_constraintTop_toTopOf="@id/lowBar" />

            <ImageButton
                android:id="@+id/flashButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="26dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_flash"
                app:layout_constraintBottom_toBottomOf="@id/lowBar"
                app:layout_constraintLeft_toLeftOf="@id/lowBar" />

            <ImageButton
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="26dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_info"
                app:layout_constraintBottom_toBottomOf="@id/lowBar"
                app:layout_constraintRight_toRightOf="@id/lowBar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>